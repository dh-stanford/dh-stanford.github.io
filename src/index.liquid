---
title: "Mundana Free Jekyll Theme"
layout: layouts/mundana_default
description: "A great Jekyll theme developed by Sal @wowthemesnet."
pagination:
  data: collections.pages
  size: 10
  alias: articles
---


<div class="container">

  {%- comment -%} {% if page.url == "/" %} {%- endcomment -%}


  <!-- Begin post excerpts, let's highlight the first 4 posts on top -->
  <div class="row remove-site-content-margin">

    <!-- latest post -->
    {% assign article = articles[0] %}
    <div class="col-md-6">
      <div class="card border-0 mb-4 box-shadow">
        <a href="{{ article.url | url }}">
          <div class="topfirstimage" style="background-image: url({{ article.data.post_images[0] | url }}); height: 200px;
            background-size: cover; background-repeat: no-repeat;"></div>
        </a>
        <div class="card-body px-0 pb-0 d-flex flex-column align-items-start">
          <h2 class="h4 font-weight-bold">
            <a class="text-dark" href="{{ article.url | url }}">{{ article.data.title }}</a>
          </h2>
          {%- comment -%} <p class="excerpt">
            {{ article.excerpt | strip_html | strip_newlines | truncate: 136 }}
          </p> {%- endcomment -%}
          <div>
            {%- comment -%} <small class="d-block text-muted">
              In <span class="catlist">
                {% for category in article.categories %}
                <a class="text-capitalize text-muted smoothscroll"
                  href="{{site.baseurl}}/categories.html#{{ category | downcase }}">{{ category }}</a><span
                  class="sep">, </span>
                {% endfor %}
              </span>
            </small> {%- endcomment -%}
            <small class="text-muted">
              {{ article.data.submitted_at }}
            </small>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      {% for idx in (1..3) %}
      {%- assign article = articles[idx] -%}
      <div class="mb-3 d-flex align-items-center">
        <div class="col-md-4">
          <a href="{{ article.url | url }}">
            <img class="w-100" src="{{ article.data.post_images[0] | url }}" alt="{{ article.data.title }}">
          </a>
        </div>
        <div>
          <h2 class="mb-2 h6 font-weight-bold">
            <a class="text-dark" href="{{ article.url | url }}">{{ article.data.title }}</a>
          </h2>
          {%- comment -%} <small class="d-block text-muted">
            In <span class="catlist">
              {% for category in second_post.categories %}
              <a class="text-capitalize text-muted smoothscroll"
                href="{{site.baseurl}}/categories.html#{{ category | downcase }}">{{ category }}</a><span class="sep">,
              </span>
              {% endfor %}
            </span>
          </small> {%- endcomment -%}
          <small class="text-muted">
            {{ article.data.submitted_at | date: '%b %d, %Y' }}
          </small>
        </div>
      </div>
      {% endfor %}

    </div>

  </div> 
  
  <!-- Sticky - add sticky tag to the post you want to highlight here - tags: [sticky] -->
  {% for article in articles %}
  {% if post.tags contains "sticky" %}
  <div class="jumbotron jumbotron-fluid jumbotron-home pt-0 pb-0 mt-3 mb-2rem bg-lightblue position-relative">
    <div class="pl-4 pr-0 h-100 tofront">
      <div class="row justify-content-between">
        <div class="col-md-6 pt-6 pb-6 pr-lg-4 align-self-center">
          <h1 class="mb-3">{{post.title}}</h1>
          <p class="mb-3 lead">
            {{ post.excerpt | strip_html | strip_newlines | truncate: 136 }}
          </p>
          <a href="{{site.baseurl}}{{post.url}}" class="btn btn-dark">Read More</a>
        </div>
        <div class="col-md-6 d-none d-md-block pr-0"
          style="background-size:cover;background-image:url({{site.baseurl}}/{{ post.image }});">
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  {% endfor %}




  {%- comment -%} {% endif %} {%- endcomment -%}
  <!--endif page url is / -->



  <!-- Now the rest of the posts with the usual loop but with an offset:4 on the first page so we can skeep the first 4 posts displayed above -->

  <div class="row mt-3">

    <div class="col-md-8 main-loop">

      <h4 class="font-weight-bold spanborder"><span>All Stories</span></h4>

      {% for article in articles offset:4 %}

      {% include "./_includes/mundana/main-loop-card.liquid" %}

      {% endfor %}

      <div class="mt-5">
        <!-- Pagination links -->
        {% if pagination.pages.length > 1 %}
        <ul class="pagination">
          {% if pagination.page.previous %}
          <li class="page-item"><a class="page-link"
              href="{{ pagination.href.previous | prepend: site.baseurl | replace: '//', '/' }}">&laquo; Prev</a>
          </li>
          {% else %}
          <li class="page-item disabled"><span class="prev page-link">&laquo;</span></li>
          {% endif %}

          {% for page in (1..pagination.pages.length) %}
          {% if page == pagination.pageNumber %}
          <li class="page-item disabled"><span class="webjeda page-link">{{ page }}</span></li>
          {% elsif page == 1 %}
          <li class="page-item"><a class="page-link" href="{{site.baseurl}}/">{{ page }}</a></li>
          {% else %}
          <li class="page-item"><a class="page-link"
              href="{{ pagination.hrefs[ loop.index0 ] | url }}">{{
              page }}</a></li>
          {% endif %}
          {% endfor %}

          {% if pagination.page.next %}
          <li class="page-item"><a class="page-link"
              href="{{ pagination.href.next | prepend: site.baseurl | replace: '//', '/' }}">Next &raquo;</a></li>
          {% else %}
          <li class="page-item disabled"><span class="next page-link">&raquo;</span></li>
          {% endif %}
        </ul>
        {% endif %}
      </div>

    </div>

    {%- comment -%} <div class="col-md-4">
      {% include sidebar-featured.html %}
    </div> {%- endcomment -%}

  </div>



</div>
